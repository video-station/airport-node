<!DOCTYPE html>
<html>
  <head>
    <title>Excel Data Viewer</title>
    <link rel="stylesheet" type="text/css" href="style.css" />
  </head>
  <body>
    <div class="container">
      <form
        class="entry-form"
        action="/"
        method="post"
        enctype="application/x-www-form-urlencoded"
      >
        <div class="form-group">
          <label for="airlineCode">Airline Code:</label>
          <input type="text" id="airlineCode" name="airlineCode" />
        </div>

        <div class="form-group">
          <label for="airlineName">Airline Name:</label>
          <input type="text" id="airlineName" name="airlineName" />
        </div>

        <div class="form-group">
          <label for="zone">Zone:</label>
          <input type="text" id="zone" name="zone" />
        </div>

        <div class="form-group">
          <label for="gate">Gate:</label>
          <input type="text" id="gate" name="gate" />
        </div>

        <div class="form-group">
          <button class="btn-submit" type="submit">Add Entry</button>
        </div>
      </form>

      <h2>Entries</h2>
      <table>
        <thead>
          <tr>
            <th>Airline Code</th>
            <th>Airline Name</th>
            <th>Zone</th>
            <th>Gate</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for (const entry of entries) { %>
          <tr>
            <td><%= entry.airlineCode %></td>
            <td><%= entry.airlineName %></td>
            <td><%= entry.zone %></td>
            <td><%= entry.gate %></td>
            <td>
              <form
                action="/delete/<%= entries.indexOf(entry) %>"
                method="post"
              >
                <button type="submit">Delete</button>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <% if (entries.length > 0) { %>
      <p><a href="/entries.xlsx" download>Download Excel File</a></p>
      <% } %>
    </div>
  </body>
</html>
